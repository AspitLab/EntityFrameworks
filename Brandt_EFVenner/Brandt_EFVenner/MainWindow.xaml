<Window x:Class="Brandt_EFVenner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brandt_EFVenner"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="625" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="mainVenneTabelViewSource" d:DesignSource="{d:DesignInstance {x:Type local:MainVenneTabel}, CreateList=True}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource mainVenneTabelViewSource}">
        <Button
            x:Name="button"
            Content="Button"
            HorizontalAlignment="Left"
            Height="19"
            Margin="426,341,0,0"
            VerticalAlignment="Top"
            Width="96"/>
        <ListView
            x:Name="listViewVen"
            HorizontalAlignment="Left"
            Height="350"
            ItemsSource="{Binding Ven}"
            Margin="10,10,0,0"
            VerticalAlignment="Top"
            Width="249"
            SelectionChanged="listViewVen_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="F-Navn" DisplayMemberBinding="{Binding Path=venData.fornavn}" Width="90"/>
                    <GridViewColumn Header="E-Navn" DisplayMemberBinding="{Binding Path=venData.efternavn}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid x:Name="grid1" HorizontalAlignment="Left" Margin="289,21,0,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label
                Content="adresse:"
                Grid.Column="0"
                HorizontalAlignment="Left"
                Margin="3"
                Grid.Row="1"
                VerticalAlignment="Center"/>
            <TextBox
                x:Name="adresseTextBox"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left"
                Height="22"
                Margin="3,5,0,5"
                Grid.Row="1"
                Text="{Binding adresse, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                VerticalAlignment="Center"
                Width="246"/>

            <TextBox
                x:Name="efternavnTextBox"
                Grid.Column="2"
                HorizontalAlignment="Left"
                Height="23"
                Margin="3"
                Grid.Row="0"
                Text="{Binding efternavn, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                VerticalAlignment="Center"
                Width="120"/>
            <Label
                Content="Navn:"
                Grid.Column="0"
                HorizontalAlignment="Left"
                Margin="3"
                Grid.Row="0"
                VerticalAlignment="Center"/>
            <TextBox
                x:Name="fornavnTextBox"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Height="23"
                Margin="3"
                Grid.Row="0"
                Text="{Binding fornavn, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                VerticalAlignment="Center"
                Width="120"/>
            <Label
                Content="post Nr:"
                Grid.Column="0"
                HorizontalAlignment="Left"
                Margin="3"
                Grid.Row="4"
                VerticalAlignment="Center"/>
            <TextBox
                x:Name="postNrTextBox"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Height="23"
                Margin="3"
                Grid.Row="4"
                Text="{Binding postNr, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                VerticalAlignment="Center"
                Width="120"/>
            <TextBox
                x:Name="bynavnTextBox"
                Grid.Column="2"
                HorizontalAlignment="Left"
                Height="23"
                Margin="3"
                Grid.Row="4"
                Text="{Binding byNavn, Mode=OneWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                VerticalAlignment="Center"
                Width="120"/>
        </Grid>

    </Grid>
</Window>
