<Window x:Class="ComicsDB_EF.InfoSeries"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComicsDB_EF"
        mc:Ignorable="d"
        Title="Series info" Height="290" MinHeight="290" MaxHeight="290" Width="350" MinWidth="350" MaxWidth="350">
    <Grid>
        <Image
            x:Name="imageImg"
            HorizontalAlignment="Left"
            Height="200"
            Margin="10,10,0,0"
            Source="{Binding bytImage}"
            VerticalAlignment="Top"
            Width="132"/>
        <Label
            x:Name="labelYear"
            Content=""
            Height="25"
            HorizontalAlignment="Right"
            Margin="0,10,30,0"
            VerticalAlignment="Top"
            Width="150"/>
        <TextBlock
            x:Name="textBlockComments"
            Height="165"
            HorizontalAlignment="Right"
            Margin="0,45,30,0"
            VerticalAlignment="Top"
            Width="150"/>
        <Button
            x:Name="buttonOk"
            Content="OK"
            HorizontalAlignment="Center"
            Height="25"
            Margin="0,0,0,10"
            VerticalAlignment="Bottom"
            Width="75"
            Click="buttonOk_Click"/>

    </Grid>
</Window>
